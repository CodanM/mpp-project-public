<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:contest_management_gui_cs"
        xmlns:model="clr-namespace:contest_management_gui_cs.model" x:Class="contest_management_gui_cs.LoginWindow"
        mc:Ignorable="d"
        Title="Login Window" Height="320" Width="299">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
            <Label Content="Username" FontSize="16" Height="31" Width="120" HorizontalAlignment="Stretch" Margin="0,32,0,0"/>
            <TextBox x:Name="UsernameTextField" TextWrapping="Wrap" FontSize="16" InputScope="LogOnName" Height="23" Width="120" Margin="0,0,0,16"/>
            <Label Content="Password" FontSize="16" Height="31" Width="120"/>
            <PasswordBox x:Name="PasswordTextField" FontSize="16" InputScope="Password" Height="23" Width="120" Margin="0,0,0,16"/>
            <Button x:Name="LoginButton" Content="Login" FontSize="16" Click="LoginButton_Click" Height="34" Width="54"/>
        </StackPanel>
    </Grid>
</Window>
